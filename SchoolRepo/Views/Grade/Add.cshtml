@model SchoolRepo.ViewModels.GradeViewModels;


@{
    ViewData["Title"] = "Add";
}

<h2>Add Grade</h2>



<form asp-controller="Grade" asp-action="Add" method="post">
    <div class="form-horizontal">
        <div class="form-group">
                <label class="control-label col-sm-2" asp-for="@Model.Level"></label>
            <div class="col-sm-10">
                <input  asp-for="@Model.Level" class="**control-group**">
                <span asp-validation-for="@Model.Level"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn-primary" value="Add Grade" />
            </div>
            
        </div>
    </div>


</form>