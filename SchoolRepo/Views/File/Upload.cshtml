@model SchoolRepo.ViewModels.AddFileViewModels

@{
    ViewBag.Title = "Add";
}

<h1>Upload Documents</h1>

<form asp-controller="File" asp-action="Upload" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2" for="files">File</label>
            <div class="col-sm-10">
                <input type="file" id="files" name="files" multiple class="**form-control**" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="Description"></label>
            <div class="col-sm-10">
                <input asp-for="Description" class="**form-control**" />
                <span asp-validation-for="Description"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="StudentID"></label>
            <div class="col-sm-10">
                <select asp-for="StudentID" asp-items="@Model.Students" class="**form-control**"></select>
            </div>

        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-md-10">
                <input type="submit" value="Upload" class="btn-primary" />
            </div>
        </div>


    </div>
</form>

