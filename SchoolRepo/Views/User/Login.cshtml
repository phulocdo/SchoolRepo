@model SchoolRepo.ViewModels.LoginViewModels

@{
    ViewBag.Title = "Login";
}

<h1 class="col-sm-offset-2">Login</h1>

<form asp-controller="User" asp-action="Login" method="post">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="@Model.ID"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.ID" class="**form-control**" />
                <span asp-validation-for="@Model.ID"></span>
            </div>
        </div>
    
         <div class="form-group">
            <label class="control-label col-sm-2" asp-for="@Model.Password"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.Password" class="**form-control**" type="password" />
                <span asp-validation-for="@Model.Password"></span>
            </div>
         </div>
    
         <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Login" class="btn-primary" />
            </div>
        </div>

    </div>
    <p class="col-sm-offset-2">Haven't got an account? <a asp-controller="User" asp-action="SignUp"> SignUp</a></p>

</form>