@model SchoolRepo.ViewModels.SignUpViewModels

@{
    ViewBag.Title = "SignUp";
}

<h1 class="col-sm-offset-2">SignUp</h1>

<form asp-controller="User" asp-action="SignUp" method="post">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="@Model.ID"></label>
            <div class="col-sm-10">
                <input class="**form-control**" asp-for="@Model.ID" />
                <span asp-validation-for="@Model.ID"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="@Model.Name"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.Name" class="**form-control**" />
                <span asp-validation-for="@Model.Name"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="@Model.Password"></label>
            <div class="col-sm-10">
                <input type="password" asp-for="@Model.Password" class="**form-control**" />
                <span asp-validation-for="@Model.Password"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="@Model.VerifyPassword"></label>
            <div class="col-sm-10">
                <input type="password" asp-for="@Model.VerifyPassword" class="**form-control**" />
                <span asp-validation-for="@Model.VerifyPassword"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="StudentID" >Grade</label>
            <div class="col-sm-10">
                <select asp-for="StudentID" asp-items="@Model.Grade" class="**form-control**"></select>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn-primary" />
            </div>
        </div>
        


    </div>
</form>