@model SchoolRepo.ViewModels.AccessViewModels

@{
    ViewData["Title"] = "Add Access Code";
}



<h1 class="col-sm-offset-2">Access Code</h1>

<form asp-controller="Home" asp-action="Add" method="post">
    <div class="form-horizontal">
        
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="@Model.Name"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.Name" class="**form-control**" />
                <span asp-validation-for="@Model.Name"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="@Model.Code"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.Code" class="**form-control**" />
                <span asp-validation-for="@Model.Code"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-md-10">
                <input type="submit" value="Add Code" class="btn-primary" />
            </div>
        </div>



    </div>
</form>