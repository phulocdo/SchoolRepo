@model SchoolRepo.ViewModels.EventViewModels;
@{
    ViewData["Title"] = "Add Event";
}

<h2>Event</h2>



<form asp-controller="Event" asp-action="Add" method="post" >
    <div class="form-horizontal">

        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="Title"></label>
            <div class="col-sm-10">
                <input asp-for="Title" class="**form-control**" />
                <span asp-validation-for="Title"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="Start"></label>
            <div class="col-sm-10">
                <input asp-for="Start" class="**form-control**">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="End"></label>
            <div class="col-sm-10">
                <input asp-for="End" class="**form-control**">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="EventID"></label>
            <div class="col-sm-10">
                <select asp-for="EventID" asp-items="@Model.Grade" class="**form-control**"></select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-md-10">
                <input type="submit" value="Add Event" class="btn-primary" />
            </div>
        </div>


    </div>
</form>